@model DataAnnotationsInASPNETCore.Models.Employee

@{
    ViewData["Title"] = @TempData["PageTitle"] as string;
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>


<h1> @TempData["PageTitle"] </h1>

<div class="row">

    <form asp-controller="Employees" asp-action="CreateEmployee" method="post" class="mt-3">


        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="EmployeeName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="EmployeeName" class="form-control" placeholder="Enter EmployeeName" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName" class="form-control" placeholder="Enter UserName" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DOJ" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DOJ" class="form-control" placeholder="Enter DOJ" />
                <span asp-validation-for="DOJ" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="DOB" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="DOB" class="form-control" placeholder="Enter DOB" />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">

            <label asp-for="Skillsets" class="col-sm-2 col-form-label"> </label>
            <div class="col-sm-10">

                <select asp-for="Skillsets" class="form-select" asp-items="Html.GetEnumSelectList<Skillset>()">

                    <option value="5">Please select the country</option>
                </select>
                <span asp-validation-for="Skillsets" class="text-danger"></span>
            </div>
        </div>

        <partial name="_EmployeeAddress" model="Model.Address"></partial>
        <partial name="_EmployeeDept" model="Model.Department"></partial>
        <partial name="_EmployeeJobDetail" model="Model.JobDetail"></partial>



        @* @Html.Partial("_EmployeeAddress",Model.Address) *@

        <br />
        <div class="form-group col-sm-12 row">

            <div class="col-sm-6 ">

                <button type="submit" class="btn btn-primary"> Create</button>
            </div>
            <div class="col-sm-6 ">

                <button type="reset" class="btn btn-primary"> Clear</button>
            </div>
        </div>

    </form>

</div>