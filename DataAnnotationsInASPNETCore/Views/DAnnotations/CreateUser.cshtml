@model DataAnnotationsInASPNETCore.Models.User

@{
    ViewData["Title"] = "User Account creation";
}

<h1>User Account creation</h1>

<div class="row">

    <form asp-controller="DAnnotations" asp-action="CreateUser" method="post" class="mt-3">


        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserName"  class="form-control" placeholder="Enter Username"/>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Password" class="form-control" type="password" placeholder="Enter Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CNPassword" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CNPassword" class="form-control" type="password" placeholder="Enter CNPassword" />
                <span asp-validation-for="CNPassword" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">

            <label asp-for="Country" class="col-sm-2 col-form-label"> </label>
            <div class="col-sm-10">

                <select asp-for="Country" class="form-select" asp-items="Html.GetEnumSelectList<Countries>()" > 

                    <option value="5">Please select the country</option>
                </select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group row">
            <label asp-for="AccountCreatedDate" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="AccountCreatedDate" class="form-control" placeholder="Enter Date" />
                <span asp-validation-for="AccountCreatedDate" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="UserIncome" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="UserIncome" class="form-control" placeholder="Enter User income" />
                <span asp-validation-for="UserIncome" class="text-danger"></span>
            </div>
        </div>



        <br />
        <div class="form-group col-sm-12 row">

            <div class="col-sm-6 "> 

                <button type="submit" class="btn btn-primary"> Create</button>
            </div>
            <div class="col-sm-6 ">

                <button type="reset" class="btn btn-primary"> Clear</button>
            </div>
        </div>

    </form>

</div>