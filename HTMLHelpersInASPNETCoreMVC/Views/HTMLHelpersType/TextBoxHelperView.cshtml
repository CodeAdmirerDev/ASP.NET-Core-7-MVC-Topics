@model HTMLHelpersInASP.NETCoreMVC.Models.Product

@{

    ViewData["Title"]="Using TextBox helper method";
}


@* Below Html.TextBox is bounded to Product Model *@
@Html.Label("ProdcutName", "ProdcutName :")
@Html.TextBox("ProdcutName",null,new { @class="clsproductname", @id="productnameId", style="color:red;"})

@* Below Html.TextBox is not bounded to Product Model *@

@Html.Label("myfeedback", "User Feedback :")
@Html.TextBox("myfeedback", null, new { @class = "clsproductname", @id = "productnameId", style = "color:red;" })


@Html.TextBoxFor(p=> p.ProdcutId,new{style="color:green;"})